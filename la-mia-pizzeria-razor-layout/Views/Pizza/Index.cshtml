@model IEnumerable<Pizza>
@{
    ViewData["Title"] = "Menu";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/la_mia_pizzeria_static.styles.css" asp-append-version="true" />
</head>
<body>
    @Html.Partial("_LayoutHeader")
    <main>
        <section class="menu-section">
            <h2>Il nostro Menu</h2>
            <a asp-action="Create" class="btn btn-primary mb-3">Crea Nuova Pizza</a>
            <div class="menu-items">
                @if (Model == null || !Model.Any())
                {
                    <p>Non sono presenti pizze sul nostro menu</p>
                }
                else
                {
                    foreach (Pizza pizza in Model)
                    {
                        <div class="menu-item">
                            <a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id" class="btn btn-primary">@pizza.Name - @pizza.Price €</a>
                            <div class="pt-3">
                                <img class="w-100" src="@pizza.Image" alt="@pizza.Name" />
                            </div>
                        </div>
                    }
                }
            </div>
        </section>
    </main>
    @Html.Partial("_LayoutFooter")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
